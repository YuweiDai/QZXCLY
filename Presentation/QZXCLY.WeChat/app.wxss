@import 'styles/weui.wxss';
@import 'styles/color.wxss';
@import 'styles/iconfont.wxss';
@import 'styles/animate.wxss';

/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;  
  background-color: #f4f4f4;
}

.banner {
	height: 330rpx;
}
.banner image {
	width: 100%;
	height: 100%;
}

.navigator-hover {
    color:#a4dd4a;
}
.ellipsis {
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}

.absolute
{
  position: absolute;
}
.relative
{
  position: relative;
}

.inline-block
{
  display: inline-block;
}



.section
{
  margin: 20rpx 0;
  background: white;
  padding: 20rpx;  
}

.section .line
{
  border-bottom: solid #f0f0f0 1px;  
  padding: 20rpx 0;
}

.section .name
{
  font-size: 45rpx;
  font-weight: bolder;
  padding: 25rpx 0;  
}

.section-big {
  padding-bottom: 0;
}
.section-big .title {
	position: relative;
	text-align: center;
	font-size: 32rpx;
	font-weight: bold;
	line-height: 2;
	margin-bottom: 20rpx;
}
.section-big .title:before {
	content: " ";
	position: absolute;
	left: 50%;
	top: 50%;
	margin-left: -180rpx;
	width: 100rpx;
	height: 1rpx;
	background: #000;
}
.section-big .title:after {
	content: " ";
	position: absolute;
	left: 50%;
	top: 50%;
	margin-left: 80rpx;
	width: 100rpx;
	height: 1rpx;
	background: #000;
}


/* 玩法攻略 */
.strategy
{
  margin-bottom:0;
}
.strategy .content {
	width: 100%; 
}

.strategy .content .item
{
  width: 100%;
	flex-wrap: wrap;
  margin: 20rpx 0;
}

.strategy .content .item:last-child
{
  margin-bottom:0;  
}

.strategy .content .item image
{
  width: 100%;
  height: 300rpx;
}

.strategy .content .item .item-name
{
  font-size: 30rpx;
}

/* 搜索 */
.header {
  position: fixed;
	display: -webkit-flex;
	left: 0;
	top: 0;
	width: 100%;
	padding: 20rpx;
	box-sizing: border-box;
	z-index: 1;
	-webkit-transition: background 0.5s ease-in-out;
}
.header.scrolled {
	background: #feb70f;
}
.header .icon {
	width: 40rpx;
	height: 40rpx;
	vertical-align: top;
}
 
.header .search {
	-webkit-flex: 1;
	color: #888;
	font-size: 30rpx;
	line-height: 40rpx;
	padding: 10rpx;
	border-radius: 30rpx;
	background: #fff;
	/*border-bottom: 1rpx solid #aaa;*/
}

/* 景点 玩吃住通用 */

.spot_service
{
  font-size:30rpx;  
}

.spot_service .section > .title
{
  font-size: 35rpx;
  font-weight: bolder;
}

.spot_service .btns {
  height: 60rpx;    
  display: flex;
  position:absolute;
  right:0rpx;
  top:34rpx;
}

.spot_service .btns .btn
{
  color: #27c24c;
  font-size: 36rpx;
  padding:0rpx 14rpx;
  border-radius:50rpx;
  margin-right:16rpx;
  border:1px solid #27c24c;
}

.spot_service .btns .btn.selected
{
  color: white;
  background-color: #27c24c;
}


.spot_service .description
{
  margin-top: 20rpx;
  font-size:30rpx;
}

.spot_service .photos
{
	width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;  
}

.spot_service .photos .photo
{
  width:335rpx;
  margin-bottom:20rpx;
  padding:0 10rpx;
}

.spot_service .photos .photo image
{
  width:335rpx;
  height:200rpx;
}

.spot_service .photos .photo .title
{
  font-size:30rpx;
}
/* 景点 玩吃住通用 结束*/