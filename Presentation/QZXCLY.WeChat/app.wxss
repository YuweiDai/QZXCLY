@import 'styles/weui.wxss';
@import 'styles/color.wxss';
@import 'styles/iconfont.wxss';

/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;  
  background-color: #f4f4f4;
}

.banner {
	height: 330rpx;
}
.banner image {
	width: 100%;
	height: 100%;
}

.navigator-hover {
    color:#a4dd4a;
}
.ellipsis {
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}

.absolute
{
  position: absolute;
}
.relative
{
  position: relative;
}

.section-big {
	padding: 20rpx;
  padding-bottom: 0;
  background: white;
}
.section-big .title {
	position: relative;
	text-align: center;
	font-size: 32rpx;
	font-weight: bold;
	line-height: 2;
	margin-bottom: 20rpx;
}
.section-big .title:before {
	content: " ";
	position: absolute;
	left: 50%;
	top: 50%;
	margin-left: -180rpx;
	width: 100rpx;
	height: 1rpx;
	background: #000;
}
.section-big .title:after {
	content: " ";
	position: absolute;
	left: 50%;
	top: 50%;
	margin-left: 80rpx;
	width: 100rpx;
	height: 1rpx;
	background: #000;
}

/* 玩法攻略 */
.strategy .content {
	width: 100%; 
}

.strategy .content .item
{
  width: 100%;
	flex-wrap: wrap;
  margin: 20rpx 0;
}

.strategy .content .item image
{
  width: 100%;
  height: 300rpx;
}

.strategy .content .item .item-name
{
  font-size: 30rpx;
}

/* 搜索 */
.header {
  position: fixed;
	display: -webkit-flex;
	left: 0;
	top: 0;
	width: 100%;
	padding: 20rpx;
	box-sizing: border-box;
	z-index: 1;
	-webkit-transition: background 0.5s ease-in-out;
}
.header.scrolled {
	background: #feb70f;
}
.header .icon {
	width: 40rpx;
	height: 40rpx;
	vertical-align: top;
}
 
.header .search {
	-webkit-flex: 1;
	color: #888;
	font-size: 30rpx;
	line-height: 40rpx;
	padding: 10rpx;
	border-radius: 30rpx;
	background: #fff;
	/*border-bottom: 1rpx solid #aaa;*/
}