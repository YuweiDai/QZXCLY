<!--pages/index/spot_service.wxml-->
<view class="container">
  <scroll-view scroll-y="true" class='spot_service'>
    <view class='banner'>
     <image src="{{service.logo}}"></image>
    </view>
    <view class='section'>
      <view class='name line relative'>
        {{service.name}}
        <view class='btns'>          
        <view class='btn' bindtap='makePhoneCall' title="拨打"data-phone="{{service.tel}}"><i class="iconfont icon-dianhua"></i></view>
        <view class='btn' hidden='{{service.panoramaId==0}}' bindtap='navToPanorama' title="全景"><i class='iconfont icon-VRshebei'></i></view>        
        <view class='btn' bindtap='navTo' title="导航"><i class='iconfont icon-daohang2'></i></view>       
       </view>
      </view>
      <view class='line relative'>地址：{{service.address}}</view>
      <view class='line relative'>设施设备：
        <view>{{service.facilities}}</view>      
      </view>                 
    </view>
    <view class='section'>
      <view class='title relative'>服务设施图片</view>    
      <view class='photos'>
        <view class='photo' bindtap='previewImage' wx:for="{{service.servicePictures}}" wx:for-item="photo" data-url="{{photo.img}}" data-index="{{index}}" >      
          <image src="{{photo.img}}"  mode='aspectFill' />
          <view class='title'>{{photo.name}}</view>  
        </view>      
      </view>

    </view>
  </scroll-view>
</view>