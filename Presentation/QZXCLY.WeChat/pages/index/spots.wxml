<!--pages/index/spots.wxml-->
<view class='container'>
	<view class="header {{scrollDown?'scrolled':''}}">		
		<view class="search" bindtap="tapSearch">
			<image class="icon" src="/resources/images/index/icon_search.png"/>
			搜索你想去的地方...
		</view>   
	</view>

<view class="spots_list flex-wrap flex-direction-row">
	<!-- left aside -->
	<view class="aside flex-wrap flex-direction-col">
		<block wx:for="{{navList}}">
			<text class="type-nav {{curNav == item.id ? 'selected' : ''}}" bindtap="selectNav" data-index="{{index}}" data-id="{{item.id}}">{{item.name}}</text>
		</block>
	</view>

	<!-- content -->
	<view class="content">
		<block wx:for="{{dishesList[curIndex]}}">
			<view class="dish flex-wrap flex-direction-row" bindtap='navToSpot' data-id="{{item.id}}">
        <image src="{{item.img}}"/>
        <text class='title'>{{item.name}}</text>
			</view>
		</block>

	</view>

</view>

<loading hidden="{{hidden}}">玩命加载中…</loading>

</view>
