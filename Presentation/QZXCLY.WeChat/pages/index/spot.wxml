<view class="container">
  <scroll-view scroll-y="true">
    <view class='spot_photos relative'>
      <swiper class="banner" autoplay="true" interval="3000" duration="500" bindchange="photoChange">
        <block wx:for="{{spot.photos}}" wx:key="id">
          <swiper-item>
            <image data-id="{{index}}" src="{{item.img}}"/>
          </swiper-item>
        </block>
      </swiper>
      <view class="star absolute" bindtap='starSpot'><i class="iconfont {{spot.star?'icon-buoumaotubiao44':'icon-shoucang2'}}"></i></view>    
      <view class="tipBg absolute"></view>        
      <view class='photoTip absolute'><i class="iconfont icon-picture}}"></i> {{spot.current_photo}}/{{spot.photos.length}}张</view>
    </view>
    <view class='spot_detail relative'>
      <view class="name line">
        {{spot.name}}
        <view class='tags'>
          <text class='tag' wx:for="{{spot.tags}}">{{item}}</text>
        </view>
      </view>
      <view class='address line flex'>
        <view class='mapAnchor'><navigator class='ellipsis' url="/pages/map/index" open-type="switchTab" hover-class="navigator-hover"><i class="iconfont icon-position"></i> {{spot.address}}</navigator></view>
        <view class='navAnchor' bindtap='navTo'>导航</view>
      </view>
      <view class='phone line' bindtap='makePhoneCall' data-phone="{{spot.phone}}"><i class="iconfont icon-dianhua"></i> 联系电话：{{spot.phone}}</view>      
      <view class='opentime line'><i class="iconfont icon-shijian01"></i> 开放时间：{{spot.opentime}}</view>
      <view class='price line'><i class="iconfont icon-menpiao"></i> 景区门票：{{spot.price}}</view>    
      <view class='desc_title line'><i class="iconfont icon-campaign"></i> 景区介绍</view>
      <view class='desc'>
        <scroll-view scroll-y="true" >
          {{spot.desc}}
        </scroll-view>
      </view>
    </view>
    <view class='spot_services'>
      <view class='filters'>
				<view class="filter {{filterId==2?'active':''}}" data-id="2" bindtap="tapFilter">玩</view>
				<view class="filter {{filterId==3?'active':''}}" data-id="3" bindtap="tapFilter">吃</view>  
				<view class="filter {{filterId==4?'active':''}}" data-id="4" bindtap="tapFilter">住</view>
      </view>
      <view hidden="{{filterId!=2}}" class='spot_detail_item'>
          <view class="item" wx:for="{{play_list}}">
            <image class="poster" src="{{item.logo}}"></image>
            <view class="meta">
              <text class="title">{{item.title}}</text>
              <text class="sub-title">{{item.descriptions}}</text>
            </view>
          </view>
      </view>    
      <view hidden="{{filterId!=3}}" class='spot_detail_item'>
          <view class="item" wx:for="{{eat_list}}" wx:for-item="eat">
            <image class="poster" src="{{eat.logo}}"></image>
            <view class="meta">
              <text class="title">{{eat.title}}</text>
              <text class="sub-title">{{eat.descriptions}}</text>
              <text class="sub-title" data-phone="{{eat.tel}}" bindtap='makePhoneCall'>{{eat.tel}}</text>
              <text class="sub-title">{{eat.person}}</text>
            </view>
            <!-- >
<!--             <view class="rating">
              <text>{{eat.rating.average}}</text>
            </view> -->
          </view>      
      </view> 
      <view hidden="{{filterId!=4}}" class='spot_detail_item'>
          <view class="item" wx:for="{{live_list}}">
            <image class="poster" src="{{item.logo}}"></image>
            <view class="meta">
              <text class="title">{{item.title}}</text>
              <text class="sub-title">{{item.descriptions}}</text>
              <text class="sub-title" data-phone="{{item.tel}}" bindtap='makePhoneCall'>{{item.tel}}</text>
              <text class="sub-title">{{item.person}}</text>
            </view>
<!--             <view class="rating">
              <text>{{item.rating.average}}</text>
            </view> -->
          </view>      
      </view>                     
    </view>
  </scroll-view>
</view>