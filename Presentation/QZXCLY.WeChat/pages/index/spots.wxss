/**sptos.wxss**/

.spots_list
{
  margin-top: 100rpx;
}

.flex-wrap{
	display: flex;
}
.flex-item{
	flex: 1;
  
}
.flex-wrap.flex-direction-col{
	flex-direction: column;
}
.flex-wrap.flex-direction-row{
	flex-direction: row;
}


/* pages/index/spots.wxss */
.aside{
	width:180rpx;
	border-right: 0.5rpx solid #ddd;
	font-size: .85rem;
}
.type-nav{
	position: relative;
	padding:.7rem .3rem;
	text-align: center;
	border-bottom: 0.5rpx solid #ddd;
	z-index: 10;
}
.type-nav.selected{
	margin-right: -1px;
	padding-left:-1px;
	color: #333;
	background-color: #fff;
}
.content{
	background-color: #fff;
  width: 569rpx;
}

.dish{
  position: relative;
	margin:0 15rpx;
	padding: 15rpx;
	border-bottom: 1px solid #ddd;
}

.dish image
{
   width:100%;height:250rpx
}

.dish .title
{
  width: 100%;
  text-align: center;
  color: white;
  font-size: 50rpx;
  font-weight: bolder;
  position: absolute;
  height: 50rpx;
  top: 115rpx;
}