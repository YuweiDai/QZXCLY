/* pages/map/index.wxss */

.container
{
  height: 100vh;
}
 .map_section
 {
   padding: 0;
   margin: 0;
   height: 100%;
   width: 100%;
 }
#map
{
  width: 100%;
  height:100%;
}

.top_section {
  height: 120rpx;
  position: absolute;
	display: -webkit-flex;
	left: 0;
	top: 0;
	width: 100%;
	padding: 20rpx;
	box-sizing: border-box;
	z-index: 1;
	-webkit-transition: background 0.5s ease-in-out;
}
 
.search_section .search ,.spotTitle_section .title{
  position: relative;
  width: 100%;
	border-radius: 8rpx;
	background: #fff;
  border: solid 1px #888;
}

.search_section .search .icon,.spotTitle_section .title .close {
  position: absolute;
  top: 10rpx;
	width: 60rpx;
	height: 60rpx;
	vertical-align: middle;
}

.search_section .search .icon,
{
  left: 10rpx;

}

.search_section .search .placeholder {
  position: absolute;
  top: 10rpx;
  left: 75rpx;
	color: #888;
	font-size: 35rpx;
	line-height: 60rpx;  
}

.spotTitle_section .title .placeholder
{
  position: absolute;
  top: 10rpx;
  left: 10rpx;
	font-size: 35rpx;
	line-height: 60rpx;  
}

.spotTitle_section .title .close
{
  right: 10rpx;
}


/* 后期要整合 */
.spotFilter_section
{
  bottom: 0rpx;
  padding: 20rpx;
}

.spotFilter_section .filters {  
  width: 710rpx;  
	display: -webkit-flex;
  background-color: white;
  border-radius: 15rpx;
}
.spotFilter_section .filters .filter {
	-webkit-flex: 1;
	text-align: center;
	color: #696969;
	font-size: 24rpx;
	line-height: 60rpx;
}
.spotFilter_section .filters .filter .v {
	display: none;
}
.spotFilter_section .filters .filter.active {
	color: white;
	font-weight: bold;
  background-color: #1296db;  
}
.spotFilter_section .filters .filter.active .v {
	display: inline-block;
}