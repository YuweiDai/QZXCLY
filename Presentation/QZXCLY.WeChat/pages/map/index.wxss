/* pages/map/index.wxss */

.container
{
  height: 100vh;
}
 .map_section
 {
   padding: 0;
   margin: 0;
   height: 100%;
   width: 100%;
 }
#map
{
  width: 100%;
  height:100%;
}

.top_section {
  height: 200rpx;
  position: absolute;
	display: -webkit-flex;
	left: 0;
	top: 0;
	width: 100%;
	padding: 20rpx;
	box-sizing: border-box;
	z-index: 1;
	-webkit-transition: background 0.5s ease-in-out;
}

.spot_section
{
	background: #fff;
  padding: 20rpx 50rpx;
  border-bottom: 1px solid #f0f0f0;
}

.spot_section .avatar {
	display: block;
	margin: 0 auto;
	width: 160rpx;
	height: 160rpx;
	border-radius:15rpx;
}

.spot_section .content
{
  margin-left: 50rpx;
}

.spot_section .content .title
{
  margin-bottom: 15rpx;
  font-size: 40rpx;
}

.spot_section .content .info
{
  line-height: 35rpx;
  margin-bottom:15rpx;  
  font-size: 30rpx;
  color: #8a8a8a;
}


.spot_section .content .btns .navigator
{
  display: inline-block;
  margin-right: 25rpx;
  font-size: 35rpx;
  color: #27c24c;
}

.spot_section .close {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;  
	width: 60rpx;
	height: 60rpx;
	vertical-align: middle;
}

.spot_section .icon,
{
  left: 10rpx;
}


/* 后期要整合 */
.spotFilter_section
{
  bottom: 0rpx;
  padding: 20rpx;
}

.spotFilter_section .filters {  
  width: 710rpx;  
	display: -webkit-flex;
  background-color: white;
  border-radius: 15rpx;
}
.spotFilter_section .filters .filter {
	-webkit-flex: 1;
	text-align: center;
	color: #696969;
	font-size: 24rpx;
	line-height: 60rpx;
}
.spotFilter_section .filters .filter .v {
	display: none;
}
.spotFilter_section .filters .filter.active {
	color: white;
	font-weight: bold;
  background-color: #27c24c;  
}
.spotFilter_section .filters .filter.active .v {
	display: inline-block;
}